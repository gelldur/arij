<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEMO-6: blah blah blah blah blahnjn"
            android:id="@+id/issue_key_and_title" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:ellipsize="end"
            android:textSize="@dimen/worklog_new_issue_key_title_font_size" android:maxLines="1"
            android:textColor="@color/header"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start date: "
            android:layout_alignLeft="@+id/issue_key_and_title"
            android:layout_below="@+id/issue_key_and_title" android:textStyle="bold" android:id="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34 AM"
            android:id="@+id/start_date"
            android:layout_alignLeft="@+id/issue_key_and_title" android:layout_below="@+id/textView"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Duration:"
              android:textStyle="bold" android:id="@+id/duration_label" android:layout_alignLeft="@+id/issue_key_and_title"
              android:layout_below="@+id/start_date"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10 days 2 hours 15 minutes"
              android:id="@+id/duration"
              android:layout_alignLeft="@+id/issue_key_and_title" android:layout_below="@+id/duration_label"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Comment:"
              android:textStyle="bold" android:id="@+id/textView2"
              android:layout_alignLeft="@+id/issue_key_and_title" android:layout_below="@+id/duration"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comment"
            android:id="@+id/worklog_comment"
            android:layout_alignLeft="@+id/issue_key_and_title" android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/issue_key_and_title"/>
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_alignRight="@+id/issue_key_and_title"
            android:layout_below="@+id/worklog_comment">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discard"
                android:id="@+id/worklog_cancel_button" android:layout_gravity="center_horizontal|top"
                android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log work"
                android:id="@+id/worklog_log_button" android:layout_gravity="center"
                android:layout_alignParentRight="true" android:layout_alignTop="@+id/worklog_cancel_button"/>
    </RelativeLayout>
</RelativeLayout>

